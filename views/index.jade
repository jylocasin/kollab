							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/ERP_CANVAS.png)";
						} else if (pathArray[1].includes("CBMC")) {
							document.getElementById("collab").innerHTML =
							"Classical Business Model Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/BMC.png)";
						} else if (pathArray[1].includes("CENTMONT")) {
							document.getElementById("collab").innerHTML =
							"CUSI Atelier 2 Montagne : " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/CANVAS-ENTREPRENDRE.png)";
						} else if (pathArray[1].includes("CUSIATMONT2")) {
							document.getElementById("collab").innerHTML =
							"CUSI Atelier 2 Montagne : " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/Cusi-Atelier-2.png)";
						} else if (pathArray[1].includes("CUSIENTMONT2")) {
							document.getElementById("collab").innerHTML =
							"CUSI Atelier Entreprendre 2 Montagne : " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/CANVAS-ENTREPRENDRE-2.png)";
						} else if (pathArray[1].includes("INNOVCK")) {
							document.getElementById("collab").innerHTML =
							"Atelier C-K : " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/C-K_CANVAS.png)";
						} else {
							document.getElementById("collab").innerHTML =
							"Canvas:" + pathArray[1];
