					script.
						var pathArray = window.location.pathname.split('/');
						if (pathArray[1].includes("CCVP")) {
							document.getElementById("collab").innerHTML =
							"CleverCities Value Proposition: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/CLEVERCITIES-Quad-Value-Proposition-v2.png)";
						} else if (pathArray[1].includes("CCSMC")) {
							document.getElementById("collab").innerHTML =
							"CleverCities Societal Model Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/CLEVER-CITIES_Societal-model_Model_Canvas.png)";
