						} else if (pathArray[1].includes("CSSSH")) {
							document.getElementById("collab").innerHTML =
							"CleverCities London Workshop Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/CLEVER-CITIES_GSSSH_London.png)";
						} else if (pathArray[1].includes("SCVPC")) {
							document.getElementById("collab").innerHTML =
							"Single Client Value Proposition Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/Classical-Value-Proposition-Canvas.png)";
						} else if (pathArray[1].includes("STUC")) {
							document.getElementById("collab").innerHTML =
							"StoryTelling the UseCase: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/USECASE-CANVAS.png)";
						} else if (pathArray[1].includes("SIGBD")) {
							document.getElementById("collab").innerHTML =
							"SIG Smart Manufacturing Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/SIG_SMARTMANUF_BOARD.png)";
						} else if (pathArray[1].includes("THVALFR")) {
							document.getElementById("collab").innerHTML =
							"Theleme Affectio Societatis Canvas: " + pathArray[1];
							document.getElementById("board-doodles").style.backgroundImage="url(images/canvas/TH_ValueShieldBoard-FR.png)";
						} else if (pathArray[1].includes("THVALEN")) {
